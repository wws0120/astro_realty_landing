---
import { Icon } from 'astro-icon/components';
import SectionContainer from './sectionContainer.astro';

const services = [
  {
    title: 'Buyer Representation',
    description:
      'Guiding you through every step of the home-buying process, from property search to closing. Our expert agents ensure you find the perfect property that meets your needs and budget.',
    icon: 'mdi:shop-find-outline',
  },
  {
    title: 'Seller Representation',
    description:
      "Maximizing your property's value and exposure in the market. We handle marketing, negotiations, and paperwork, ensuring a smooth and profitable sale of your home.",
    icon: 'ic:outline-real-estate-agent',
  },
  {
    title: 'Property Management',
    description:
      'Comprehensive management services for landlords, including tenant screening, rent collection, maintenance, and reporting. We handle daily operations, letting you focus on investments.',
    icon: 'mdi:office-building-cog',
  },
  {
    title: 'Investment Advisory',
    description:
      'Expert guidance on real estate investment opportunities. We analyze market trends, potential returns, and risks to help you make informed decisions and grow your real estate portfolio.',
    icon: 'mdi:finance',
  },
  {
    title: 'Market Analysis',
    description:
      'In-depth research and reporting on local real estate trends. Our detailed market analyses help buyers, sellers, and investors understand current conditions and make data-driven decisions.',
    icon: 'mdi:chart-box-outline',
  },
  {
    title: 'Commercial Real Estate Services',
    description:
      'Specialized assistance for businesses seeking to buy, sell, or lease commercial properties. From office spaces to retail locations, we help you find or market the perfect commercial real estate solution.',
    icon: 'mdi:business',
  },
];
---

<section id="services">
  <SectionContainer>
    <div class="flex items-end justify-between mb-10">
      <div class="max-w-2xl mx-auto text-center">
        <span
          class="text-base font-semibold uppercase tracking-wide text-amber-700 mb-4"
          >Services</span
        >
        <h2
          class="text-center font-semibold text-3xl sm:text-4xl md:text-5xl text-slate-900 sm:leading-10 w-full mb-4"
        >
          Our Services
        </h2>
        <p class="text-base font-medium text-default-800">
          Comprehensive real estate solutions tailored to your needs.
        </p>
      </div>
    </div>

    <div
      data-aos="custom-fade-top"
      data-aos-delay="100"
      class="grid lg:grid-cols-3 grid-cols-1 gap-4 items-center rounded-md overflow-hidden"
    >
      {
        services.map((service) => (
          <div class="group bg-white rounded-lg">
            <div class="">
              <span>
                <Icon class="h-14 w-14 text-amber-600" name={service.icon} />
              </span>
              <h2 class="text-2xl font-medium mb-4 mt-8">{service.title}</h2>
              <p class="text-base mb-6">{service.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </SectionContainer>
</section>
